<Window x:Class="MediStoreManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediStoreManager"
        mc:Ignorable="d"
        Title="Login" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Height="180" Width="400">
        <StackPanel>
            <TextBlock Text="Username:" Margin="20,20,20,0"/>
            <TextBox x:Name="UsernameTextBox" Margin="20,0,20,0"/>
            <TextBlock Text="Password:" Margin="20,20,20,0"/>
            <PasswordBox x:Name="PasswordBox" Margin="20,0,20,0"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="20,20,20,0"/>
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Margin="20,0,20,0"/>
        </StackPanel>
    </Grid>
</Window>
