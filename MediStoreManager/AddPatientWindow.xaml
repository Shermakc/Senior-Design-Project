<Window x:Class="MediStoreManager.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediStoreManager"
        mc:Ignorable="d"
        Title="Add Patient" Height="400" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Label FontWeight="Bold" HorizontalAlignment="Center">
            Enter Patient Information
        </Label>
        <WrapPanel Height="300" Width="400">
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="First Name: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Middle Name: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Last Name: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Home Phone #: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Cell Phone #: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Street Address: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="City: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="State: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Zip Code: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
            <TextBlock Width="110" HorizontalAlignment="Left" TextAlignment="Right" Text="Insurance Provider: " Margin="0,5,0,0"/>
            <TextBox Width="260" HorizontalAlignment="Right" Margin="0,5,0,5"/>
        </WrapPanel>
        <StackPanel Width="400" Height="20" Orientation="Horizontal" HorizontalAlignment="Center">
            <Grid Width="194">
                <Button Content="OK" Width="100" HorizontalAlignment="Right" Margin="0,0,15,0"/>
            </Grid>
            <Grid Width="194">
                <Button Content="Cancel" Width="100" HorizontalAlignment="Left" Margin="15,0,0,0" Click="Button_Click"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
